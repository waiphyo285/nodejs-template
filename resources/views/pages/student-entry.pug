extends ../includes/layout-main
block content
  -var isEdited = data.id;

  main.border.rounded.mx-3.mb-5.p-3(role='main')
    include ./../includes/entry/entry-header

    form.d-none#uploadForm(method='POST' action='/file/upload/students' enctype="multipart/form-data")
      input#file-input(type='file' name='uploaded_file' accept="image/png, image/jpeg")

    ul#myTab.nav.nav-tabs.mb-3(role='tablist')
      li.nav-item(role='presentation')
        button#information-tab.nav-link.active(data-toggle='tab' data-target='#information' type='button' role='tab' aria-controls='information' aria-selected='true')
          i.bi.bi-info-circle
          span.d-none.d-lg-block !{content.common.tab_info}
          
    include ./../includes/entry/entry-form
      block inputs
        #myTabContent.tab-content
          #information.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='information-tab')
            div.form-group.d-none 
              div.row.remove-img-list

            div.form-group  
              include ./../includes/common/input-image

            div.form-group.row       
              div.col-md-6.mb-3
                label.control-label(for='name') !{content.name} *
                input.form-control.input-sm#name(type='text', name='name', value=data.name, maxlength="100" autocomplete="off" required autofocus)
                span.invalid-feedback
                  | Please fill out this field. It is required to proceed.

              div.col-md-6.mb-3
                label.control-label(for='age') !{content.age}
                input.form-control.input-sm#age(type='number', name='age', value=data.age, min="16" max="30" autocomplete="off")
                span.invalid-feedback
                  | Please enter a valid age.

            div.form-group.row
              div.col-md-6.mb-3
                label.control-label(for='grade') !{content.grade}
                input.form-control.input-sm#grade(type='number', name='grade', value=data.grade, min="0" max="100" autocomplete="off")
                span.invalid-feedback
                  | Please enter a valid grade (0-100).
                  
              div.col-md-6.mb-3
                include ./../includes/common/input-status

        include ./../includes/entry/entry-btn

    form#postSuccessForm(method='GET', action=page.list.url)

  script(src="/javascript/pages/upload-file.js")